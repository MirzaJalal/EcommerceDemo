@using Chondok.Models
@*@using X.PagedList.Mvc.Common*@
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Product>
@{
    ViewData["Title"] = "Home Page";
}


<br />
<br />
<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-sm-3">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal text-center">
                            <label style="font-size:16px;color:steelblue">@product.Name</label>
                        </h4>
                    </div>
                    <div class="text-center card">
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id">
                            <img src="~/@product.Image" alt="Card Image" class="card-img-top" style="height: 210px; width:240px;" />
                        </a>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <label style="font-size: 16px; color: #3b3b3b"><b>Price : @product.Price</b></label>
                            </div>
                            @*<a asp-area="Customer" asp-controller="Home" asp-action="Cart">
                                    <i class="fas fa-shopping-cart"></i>
                                </a>*@
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-outline-dark"><i class="fas fa-info-circle"></i></a>
                            @*<button asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" type="button" class="btn btn-outline-info"><i class="fas fa-info-circle"></i></button>*@
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div>
   Page . . @Html.PagedListPager(Model, c =>Href("~/Customer/Home/Index?page="+c))
</div>