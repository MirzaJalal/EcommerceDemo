@model Chondok.Models.Order
@using Chondok.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    List<Product> products = HttpContextAccessor.HttpContext.Session.Get<List<Product>>("products");

    if (products == null)
    {
        products = new List<Product>();
    }
}
<h1 class="text-info">Order Details</h1>

<div class="row">
    <div class="col-6">
        <div class="card">
            <form asp-action="" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                <div class="form-group row">
                    <div class="col-4 text-center">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PhoneNo"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PhoneNo" class="form-control" />
                    </div>
                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Address"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Address" class="form-control" />
                    </div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-8">
                        @*<select asp-for="ProductTypeId" asp-items="ViewBag.ProductTypeId" class="form-control"></select>*@
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="OrderDate"></label>
                    </div>
                    <div class="col-8">
                        @*<select asp-for="SpecialTagId" asp-items="ViewBag.SpecialTagId" class="form-control"></select>*@
                        <input asp-for="OrderDate" class="form-control" />
                    </div>
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>
    <div class="col-6">
        <div class="card">
            <table class="table table-borderless text-center">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in products)
                    {
                        <tr>
                            <td>
                                <img src="~/@item.Image" style="height:60px;width:60px;" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="text-right">
    <h3>Total Price: @products.Sum(c => c.Price)</h3>
</div>
<div class="form-group text-right">
    <input type="submit" value="Place Order" class="btn btn-success" />
</div>








@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
