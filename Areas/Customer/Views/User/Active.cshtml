@model Chondok.Models.ApplicationUser
@{
    ViewData["Title"] = "Active";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update User</h1>
<p class="text-danger">@ViewBag.message</p>
<form asp-action="Active" method="post" id="user-form">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName"></label>
            </div>
            <div class="col-5">
                <input asp-for="UserName" readonly class="form-control" />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FirstName"></label>
            </div>
            <div class="col-5">
                <input asp-for="FirstName" readonly class="form-control" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LastName"></label>
            </div>
            <div class="col-5">
                <input asp-for="LastName" readonly class="form-control" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Active" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
    <script>
    $(document).ready(function () {
        $("#user-form").validate({
            rules: {
                UserName: {
                    required: true,
                },
                PasswordHash: {
                    required: true,
                },
                FirstName: {
                    required: true,
                },
            },
        });

    });
    </script>
}
